.PHONY = all clean oclean fclean re
# Variables
CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
kill = ${RM}
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: m.h ${OBJ}
	${CC} ${OBJ} -o ${NAME}

re: oclean all

clean:
	${kill} -f *~ ${NAME}

oclean:
	${kill} -f ${OBJ}

fclean: oclean clean
