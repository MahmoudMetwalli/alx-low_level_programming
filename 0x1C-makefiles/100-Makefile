.PHONY = all clean oclean fclean re
# Variables
CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
PRE = ${OBJ}
NAME = school
kill = ${RM}
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: ${NAME}

${NAME}: ${OBJ} m.h
	${CC} ${OBJ} -o ${NAME}

${PRE}: ${SRC}
	${CC} ${SRC} -c
re: oclean all

clean:
	${kill} -f *~ ${NAME}

oclean:
	${kill} -f ${OBJ}

fclean: oclean clean
