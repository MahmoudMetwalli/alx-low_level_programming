.PHONY = all clean oclean fclean re
# Variables
CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${CFLAGS} -o $@ $^

%.o: %.c
	${CC} ${CFLAGS} -c $< -o $@

re: oclean all

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean:
	${RM} -f ${OBJ} *~ ${NAME}
