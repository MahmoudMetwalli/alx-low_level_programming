.PHONY = all clean oclean fclean
# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

%.o: %.c
	$(CC) -c $< -o $@

re:
	$(CC) $(SRC) -o $(NAME)
clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f ${OBJ}

fclean:
	$(RM) -f ${OBJ} *~ ${NAME}
